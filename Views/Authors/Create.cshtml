@model SharedModels.Author
@* @model Author *@

<div class="container mt-4">
    <h2 class="text-primary">Add Author</h2>
    <form asp-action="Create" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Author Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>