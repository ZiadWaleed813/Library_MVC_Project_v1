@model IEnumerable<SharedModels.Author>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Authors</h1>
        <a asp-action="Create" class="btn btn-success">Add New Author</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Books</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    <td>
                        @if (author.Books != null) @*  && author.Books.Any() *@
                        {
                            <ul>
                                @foreach (var book in author.Books)
                                {
                                    <li>@book.Name</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No books</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@author.ID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@author.ID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@author.ID" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this property?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>